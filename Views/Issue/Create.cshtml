@model RemoteWork.Models.Issue

@{
    ViewData["Title"] = "Создать задачу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-7 mx-auto">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center fs-4">Создать задачу</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Название</label>
                    <input asp-for="Title" class="form-control" required="required"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Description" class="control-label">Описание</label>
                    <textarea asp-for="Description" class="form-control" required="required"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Создать" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>