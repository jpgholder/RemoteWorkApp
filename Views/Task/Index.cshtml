@model RemoteWork.Models.Issue
@{
    ViewData["Title"] = "Задача " + @Model.IssueId;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 col-lg-7 mx-auto">
    <div class="card">
        <div
            class="card-header d-flex align-items-center flex-wrap justify-content-center justify-content-md-between">
            <h2 class="text-center fs-4">@Model.Title</h2>
            <span class="badge @(Model.Status switch {
                                   Status.Opened => "bg-primary",
                                   Status.Closed => "bg-secondary",
                                   _ => "bg-success"
                                   }) ms-2">
                @(Model.Status switch {
                    Status.Opened => "Открыта",
                    Status.Closed => "Отменена",
                    _ => "Выполнена"
                    })
            </span>
        </div>
        <div class="card-body">
            <p>@Model.Description</p>
            <div class="text-center" id="open-button">
                <button class="btn btn-primary">Добавить ответ</button>
            </div>
            <form style="display: none" id="response-form">
                <div class="form-group">
                    <textarea class="form-control" required="required" placeholder="Текст ответа"></textarea>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="control-label">Добавить файл к ответу</label>
                    <input type="file" class="form-control" style="max-width: max-content"/>
                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Сохранить ответ</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const btn = document.getElementById("open-button")
    const form = document.getElementById("response-form")
    btn.addEventListener("click", () => {
        btn.remove()
        form.style.display = "block"
    })
</script>